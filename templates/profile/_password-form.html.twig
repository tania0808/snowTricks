{% extends 'base.html.twig' %}

{% block title %}Edit your password{% endblock %}

{% block body %}
    {{ include('profile/_profile_header.html.twig') }}
<div class="p-6 space-y-4 md:space-y-6 sm:p-8 max-w-screen-xl mx-auto">
    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
        Edit your profile
    </h1>

    {{ form_start(passwordForm, {'attr': {'class': 'max-w-4xl mt-24'}}) }}
    <div class="flex flex-col">
        <div class="mb-5 max-w-sm">
            {{ form_label(passwordForm.oldPassword, 'Your old password', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
            {{ form_widget(passwordForm.oldPassword, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', 'type': 'password'}}) }}
            {% if form_errors(passwordForm.oldPassword) %}
                <div class="px-4 py-2 my-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                    <span class="font-medium">{{ form_errors(passwordForm.oldPassword) }}</span>
                </div>
            {% endif %}
        </div>

        <div class="mb-5 max-w-sm">
            {{ form_label(passwordForm.newPassword, 'Your new password', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
            {{ form_widget(passwordForm.newPassword, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'}}) }}

            {% if form_errors(passwordForm.newPassword) %}
                <div class="px-4 py-2 my-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                    <span class="font-medium">{{ form_errors(passwordForm.newPassword) }}</span>
                </div>
            {% endif %}
        </div>
        <div class="mb-5 max-w-sm">
            {{ form_label(passwordForm.confirmPassword, 'Confirm your new password', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
            {{ form_widget(passwordForm.confirmPassword, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'}}) }}

            {% if form_errors(passwordForm.confirmPassword) %}
                <div class="px-4 py-2 my-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                    <span class="font-medium">{{ form_errors(passwordForm.confirmPassword) }}</span>
                </div>
            {% endif %}
        </div>
    </div>

    <button type="submit" class="text-white mb-10 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Edit</button>
    {{ form_end(passwordForm) }}
</div>
{% endblock %}
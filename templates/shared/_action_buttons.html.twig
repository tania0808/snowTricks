<div class="flex absolute top-2 right-1">
    <a href="{{ path(editRoute, {id: mediaId}) }}">
        <button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm p-2.5 text-center inline-flex items-center me-2">
            <i class="fa-regular fa-pen-to-square"></i>
        </button>
    </a>

    <button data-id="{{ mediaId }}" id="delete-button" onclick="addOpenModal()" data-modal-target="popup-modal" data-modal-toggle="popup-modal" type="button" class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm p-2.5 text-center inline-flex items-center me-2">
        <i class="fa-solid fa-trash"></i>
    </button>
</div>
